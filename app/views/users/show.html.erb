<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
      <lable> Name :</lable> 
        <%= @user.name %>
        <br>
        <br>
        <lable> Email :</lable> 
        <%= @user.email %>
        <br>
        <lable> gender :</lable>
        <%= show_gender(@user.gender) %>
        <br>
        <lable> Phone :</lable> 
        <%= @user.phone %>
      </h1>
    </section>
      <% if admin? %>
      <section class="car_form">
        <%= render partial: "shared/car_form", locals: { btn: "Post" } %>
      </section>
      <% end %>
  </aside>
  <div class="col-md-8">
    <% if @user.cars.any? %>
      <h3>Cars (<%= @user.cars.count %>)</h3>
      <ol class="microposts">
        <%= render @cars %>
      </ol>
    <% end %>
  </div>
  </div>
</div>