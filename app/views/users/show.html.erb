<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %>
      </h1>
    </section>
    <% if logged_in? && admin? %>
    <section class="car_form">
        <%= render "shared/car_form" %>
      </section>
    <% end %>
  </aside>
  <div class="col-md-8">
    <% if @user.cars.any? %>
      <h3>Cars (<%= @user.cars.count %>)</h3>
      <ol class="microposts">
        <%= render @cars %>
      </ol>
    <% end %>
  </div>
</div>