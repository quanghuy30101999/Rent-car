<div class= "col-md-10 col-md-offset-3">
<%= form_for(@order, url: car_orders_url) do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="row">
    <aside class="col-md-6">
      <div class="form-group">
          <label> Name </label>
          <%= f.text_field :name %>
          <label> Email </label>
          <%= f.text_field :email %>
      </div>
      <label> Rent Date </label>
        <div class="datetime">
            <%= f.datetime_select :rent_time, id: :rent_time, :default => { :hour => Time.zone.now.hour, :minute => Time.zone.now.min } %>
        </div>
        <label> Return Date </label>
        <div class="datetime">
            <%= f.datetime_select :return_time, id: :return_time, :default => { :hour => Time.zone.now.hour, :minute => Time.zone.now.min } %>
        </div>
        <%= f.submit "Order", class: "btn btn-primary" %>

      </div>
      <br>
    </aside>
  </div>
<% end %>
</div>