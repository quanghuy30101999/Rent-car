<div class="center jumbotron">
  <h1>Welcome to the Rent Car</h1>
</div>

<div class="search car">
  <nav class="navbar navbar-light bg-light justify-content-between">
  <%= form_tag(search_path, :method => "get", class: "form-inline") do %>
        <p><%= search_field_tag :search, params[:search], placeholder: "Search", class: "form-control mr-sm-2" %></p>
        <label>Available From</label>
        <%= date_field_tag "DateRent", :date_rent %>
        <label>Available To</label>
        <%= date_field_tag "DateReturn", :date_return %>
        <%= button_tag "Search", :class => "btn btn-outline-success my-2 my-sm-0" %>
      <% end %>
  </nav>
</div>

<div class="card-deck">
  <%= render "shared/feed" %>
</div>