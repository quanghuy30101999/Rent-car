<li id="cars-<%= car.id %>">
  <div class="card" style="width: 25rem;">
  <div class="card-body">
    <h5 class="card-title"><span class="name">Name : <%= car.name %></span><br></h5>
    <p class="card-text"><span class="year">Year  : <%= car.year %></span><br>
      <% if car.price_unit == "USD" %>
        <span class="price">Price : <%= car.price %>$</span><br>
      <% else %>
        <span class="price">Price : <%= car.price %>Ä‘</span><br>
      <% end %>
      <span class="color">Color : <%= car.color %></span><br>
      <span class="begin">Begin : <%= car.begin %></span><br>
      <span class="end">End : <%= car.end %></span><br>
      <span class="timestamp">
        Posted <%= time_ago_in_words(car.created_at) %> ago.
      </span>
    </p>
      <% if logged_in? && admin? %>
          <%= link_to "edit", edit_car_url(car) %>
          <%= link_to "delete", car, method: :delete,
                                     data: { confirm: "You sure?" } %>
      <% end %>      
    <a href="#" class="btn btn-primary">Detail</a>
  </div>
</div>
</li>
<hr>
